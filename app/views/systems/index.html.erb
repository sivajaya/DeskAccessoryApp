<p id="notice"><%= notice %></p>
<div class="row mt">
  <div class="col-md-8 tblsys">
    <div class="content-panel panel-primary">
      <table class="table table-striped table-advance table-hover">
        <h4>Listing Systems</h4>
        <hr>
        <thead>
          <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Is laptop</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @systems.each do |system| %>
          <tr>
            <td><%= system.name %></td>
            <td><%= system.size %></td>
            <td><%= system.is_laptop %></td>
            <td><%= link_to '', system, :class =>"btn btn-success btn-xs fa fa-check "%>
            <%= link_to '', edit_system_path(system), :class =>"btn btn-primary btn-xs fa fa-pencil" %>
            <%= link_to '', system, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger btn-xs fa fa-trash-o"  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New System', new_system_path,:class =>"btn btnnew btn-success"%>
      </div>
    </div>
  </div>