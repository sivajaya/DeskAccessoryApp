<p id="notice"><%= notice %></p>
<div class="row mt">
  <div class="col-md-8 tblalign">
    <div class="content-panel panel-primary">
      <table class="table table-striped table-advance table-hover">
        <h4>Listing Employees</h4>
        <hr>
        <thead>
          <tr>
            <th>EmpId</th>
            <th>Name</th>
            <th>Email id</th>
            <th>Mobile Number</th>
            <th>Designation</th>
            <th>Actiion</th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.emp_id %></td>
            <td><%= employee.name %></td>
            <td><%= employee.email_id %></td>
            <td><%= employee.mobile_no %></td>
            <td><%= employee.designation %></td>
            <td><%= link_to '', edit_employee_path(employee), :class =>"btn btn-primary btn-xs fa fa-pencil" %>
              <%= link_to '', employee, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger btn-xs fa fa-trash-o" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Employee', new_employee_path,:class =>"btn btnnew btn-success"%>
    </div>
  </div>
</div>