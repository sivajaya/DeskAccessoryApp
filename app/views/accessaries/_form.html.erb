<%= form_for(@accessary) do |f| %>
<% if @accessary.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@accessary.errors.count, "error") %> prohibited this accessary from being saved:</h2>

  <ul>
    <% @accessary.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-group">
  <%= f.label :employee_id , :class => "col-sm-2 col-sm-2 control-label"%>
  <div class="col-sm-10">
    <%= collection_select(:accessary, :employee_id, Employee.all, :id, :name, {:prompt => "--Select Employee--"},:class =>"form-control form") %> <br>
  </div>
</div>
<div class="form-group">
  <%= f.label :moniter_id , :class => "col-sm-2 col-sm-2 control-label"%>
  <div class="col-sm-10">
    <%= collection_select(:accessary, :moniter_id, Moniter.all, :id, :screen, {:prompt => "--Select Monitor--"},:class =>"form-control form") %> <br>
  </div>
</div>
<div class="form-group">
  <%= f.label :system_id , :class => "col-sm-2 col-sm-2 control-label"%>
  <div class="col-sm-10">
    <%= collection_select(:accessary, :system_id, System.all, :id, :name, {:prompt => "--Select System--"},:class =>"form-control form") %> <br>
  </div>
</div>
<div class="form-group">
  <%= f.label :items , :class => "col-sm-2 col-sm-2 control-label"%>
  <div class="col-sm-10">
    <%= f.number_field :items, :class =>"form-control form" %> <br>
  </div>
</div>
<div class="form-group">
  <%= f.label :Accessaries , :class => "col-sm-2 col-sm-2 control-label"%>
  <div class="col-sm-10">
    <% Peripheral.all.each do |peripheral| %>
    <div>
      <%= check_box_tag :peripheral_ids, peripheral.id, @accessary.peripherals.include?(peripheral), :name => 'accessary[peripheral_ids][]' %>
      <%= label_tag :peripheral_ids, peripheral.name %>
    </div>
    <% end %>
  </div>
</div>
<div class="actions">
  <%= f.submit'Save', :class =>"btn btn-success btnnew btnalign btn-sm" %>
</div>
<% end %>
