<p id="notice"><%= notice %></p>
<div class="row mt">
  <div class="col-md-8 tblalign">
    <div class="content-panel panel-primary">
      <table class="table table-striped table-advance table-hover">
        <h4>Listing Accessaries</h4>
        <hr>
        <thead>
          <tr>
            <th>Employee</th>
            <th>Moniter</th>
            <th>System</th>
            <th>Items</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @accessaries.each do |accessary| %>
          <tr>
            <td><%=Employee.find(accessary.employee_id).name %></td>
            <td><%=Moniter.find(accessary.moniter_id).screen %></td>
            <td><%=System.find(accessary.system_id).name %></td>
            <td><%= accessary.items %></td>
            <td><%= link_to '', edit_accessary_path(accessary), :class =>"btn btn-primary btn-xs fa fa-pencil" %>
              <%= link_to '', accessary, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger btn-xs fa fa-trash-o" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Accessary', new_accessary_path,:class =>"btn btnnew btn-success"%>
    </div>
  </div>
</div>