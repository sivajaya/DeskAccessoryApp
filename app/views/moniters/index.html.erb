<p id="notice"><%= notice %></p>

<h1>Listing Moniters</h1>

<table>
  <thead>
    <tr>
      <th>Screen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moniters.each do |moniter| %>
      <tr>
        <td><%= moniter.screen %></td>
        <td><%= link_to 'Show', moniter %></td>
        <td><%= link_to 'Edit', edit_moniter_path(moniter) %></td>
        <td><%= link_to 'Destroy', moniter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

