<p id="notice" class="flash-message"><%= notice %></p>
<div class="row mt">
<div class="col-md-6 tblalign">
    <div class="content-panel panel-primary">
      <table class="table table-striped table-advance table-hover">
        <h4>Listing Moniters</h4>
        <hr>
        <thead>
          <tr>
            <th>Screen</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>

        <tbody>
          <% @moniters.each do |moniter| %>
          <tr>
            <td><%= moniter.screen %></td>
            <td><%= link_to '', edit_moniter_path(moniter), :class =>"btn btn-primary btn-xs fa fa-pencil" %></td>
            <td><%= link_to '', moniter, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger btn-xs fa fa-trash-o" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Moniter', new_moniter_path,:class =>"btn btnnew btn-success" %>
    </div>
  </div>
</div>