<p id="notice" class="flash-message"><%= notice %></p>
<div class="row mt">
  <div class="col-md-6 tblalign">
    <div class="content-panel panel-primary">
      <table class="table table-striped table-advance table-hover">
        <h4>Listing Peripherals</h4>
        <hr>
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="2">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @peripherals.each do |peripheral| %>
          <tr>
            <td><%= peripheral.name %></td>
            <td><%= link_to '',  edit_peripheral_path(peripheral), :class =>"btn btn-primary btn-xs fa fa-pencil" %></td>
            <td><%= link_to '', peripheral, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-danger btn-xs fa fa-trash-o" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Moniter', new_peripheral_path,:class =>"btn btnnew btn-success" %>
    </div>
  </div>
</div>